# EarnMore Platform Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# PERPLEXITY AI API
# =============================================================================
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PERPLEXITY_MODEL=sonar-pro
PERPLEXITY_MAX_TOKENS=4000

# =============================================================================
# SCREENER.IN CREDENTIALS
# =============================================================================
# Create account at: https://www.screener.in
SCREENER_USERNAME=your_email@example.com
SCREENER_PASSWORD=your_password_here
SCREENER_BASE_URL=https://www.screener.in

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://earnmore:earnmore_password@localhost:5432/earnmore_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# =============================================================================
# EMAIL CONFIGURATION (for report delivery)
# =============================================================================
# For Gmail, create app password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM_NAME=EarnMore Research
EMAIL_FROM_ADDRESS=noreply@earnmore.com

# =============================================================================
# SEC EDGAR API
# =============================================================================
# Required: Your email for SEC EDGAR API user agent
EDGAR_USER_AGENT=YourName your_email@example.com

# =============================================================================
# NEWS APIs (Optional)
# =============================================================================
NEWS_API_KEY=your_newsapi_key_here
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=EarnMore Platform
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SUBSCRIPTION & BILLING (Razorpay for India)
# =============================================================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =============================================================================
# REPORT GENERATION
# =============================================================================
REPORT_OUTPUT_DIR=./reports
REPORT_TEMPLATE_DIR=./equity_research/report_generation/templates
MAX_REPORT_GENERATION_TIME=300  # seconds

# =============================================================================
# CELERY (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
